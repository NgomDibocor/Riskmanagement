<aura:component controller="OrmActivityController" access="global" extends="c:ormAbstractListCmp">
		 <!-- attributes -->
	<aura:attribute name="activityProof" type="Product2[]" />
  	<aura:attribute name="activityProofTemp" type="Product2[]" />
  	<aura:attribute name="idActivity" type="string" />
  	<aura:attribute name="filter" type="String" />
	
	<aura:handler action="{!c.doInit}" event="c:OrmSendIdActivityEvt" />
	<aura:registerEvent name="OrmNewActivityProofClickedEvt"  type="c:OrmNewActivityProofClickedEvt"/>
	 <div class="slds-m-around_large">
		<div class="topSpacing">
        	<label class="slds-form-element__label ">Activity  proof<span class="cmn_mandatory_indicator"></span></label>
        </div>                                        
	    <div class="activityProof">
	    	<div class="activityProofSearch">
		    	<a href="javascript:void(0);" >
					<lightning:input type="search"  placeholder="{!$Label.c.orm_filter_measure_placeholder}" onchange="{!c.filterMeasure}" value="{!v.key}" label="" />
				</a>
			</div>
			<span title="{!$Label.c.new_title_label + ' ' + $Label.c.orm_measure_label}" class="btnNewMeasure"  onclick="{!c.openNewActivityProof}">
	        	<lightning:icon iconName="utility:new" size="small" />
	        </span>
	        <br/><br/>
	         
	         
	         <table class="slds-table slds-table_bordered slds-table_cell-buffer">
	            <thead>
	                <tr class="slds-text-title--caps">
	                  <th style="width:3.25rem;" class="slds-text-align--right">
		              	<div class="slds-form-element">
		                	<div class="slds-form-element__control">
		                    	<label class="slds-checkbox">
		                        	<!--header checkbox for select all-->
		                        	<ui:inputCheckbox aura:id="box3" change="{!c.selectAll}"/>
		                        	<span class="slds-checkbox--faux"></span>
		                        	<span class="slds-form-element__label text"></span>
		                     	</label>
		                    </div>
		                </div>
		              </th> 
	                  <th scope="col"><div class="slds-truncate" title="">NÂ°</div></th> 
	                  <th scope="col"><div class="slds-truncate" title="{$Label.c.orm_name_activityProof}">{!$Label.c.orm_name_activityProof}</div></th>
	                  <th scope="col"><div class="slds-truncate" title="{!!$Label.c.orm_description_ActivityProof}">{!$Label.c.orm_description_ActivityProof}</div></th>
	                  <th scope="col"><div class="slds-truncate" title="{!$Label.c.orm_table_action_label}">{!$Label.c.orm_table_action_label}</div></th>
	                </tr>
	            </thead>
	            
	            <tbody>
	             
	            </tbody>
	        </table>
	         
	       
		</div>
	</div>
	
	
	<!--<c:OrmActivityProofNewCmp/>  -->
</aura:component>
