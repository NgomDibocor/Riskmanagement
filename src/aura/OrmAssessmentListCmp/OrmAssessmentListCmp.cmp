<aura:component controller="OrmAssessmentRiskController">
    <aura:registerEvent name="DisplayAssessment"
		type="c:OrmDisplayAssessmentEvt"/>
    <aura:handler action="{!c.doInit}" name="init" value="{!this}" />
    <!-- <aura:attribute name="assessments" type="Assessment__c[]" description="" /> -->
    <aura:attribute name="assessments" type="List" />
	
	<aura:registerEvent name="ShowAssessmentClicked" type="c:OrmShowAssessmentClickedEvt" description="" />
	

  <div class="slds-grid slds-wrap">
   
   <aura:iteration items="{!v.assessments}" var="item">
   
        <div class="slds-size_1-of-3">
            <div class="slds-box slds-box_x-small slds-text-align_left slds-m-around_x-small" style="word-wrap: break-word;width:350px;">
                <article class="slds-card" style="height:130px;">
                    <div class="slds-card__header slds-grid">
                        <header class="slds-media slds-media_center slds-has-flexi-truncate">
                            <div class="slds-media__figure">
                                <span class="slds-icon_container " title="Assessment">
                                  <lightning:icon iconName="utility:trail" size="medium" />
                                </span>
                            </div>
                            <div class="slds-media__body">
                                <h2>
	                                <a href="javascript:void(0);" class="slds-card__header-link"
	                                    title=""><ui:outputText value="{!item.value.assessment.Name}" /><!-- {!item.value.Name} -->
	                                </a>
	                            </h2>
                            </div>
                            <div class="slds-no-flex">
                                <button class="slds-button slds-button_neutral" 
                                        onclick="{!c.showAssessment}">
							       {!$Label.c.show_button_title}
                                </button>
                            </div>
                        </header>
                    </div>
                    <div class=" slds-card__body slds-card__body_inner" style="height:20px">
                        <ui:outputRichText value="{!item.value.assessment.orm_description__c}" /> <!-- {!item.value.orm_description__c} -->
                    </div>
                    <div class="slds-card__body slds-card__body_inner">
                     <span>Risk <b>{!item.value.nbreRisk}</b></span>
                    </div>
                   
                </article>
            </div>
        </div>
       
    </aura:iteration>
  </div>
    
    
		 <lightning:button label="New Assessment" 
                          variant="brand"
                          class="slds-button"
                          onclick="{!c.newAssessment}"/>        
 
    
   
    
</aura:component>