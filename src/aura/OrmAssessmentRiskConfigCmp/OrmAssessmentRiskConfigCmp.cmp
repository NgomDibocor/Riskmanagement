<aura:component extends="c:ormAbstractListCmp" controller="OrmRiskController" >
<aura:handler name="init" value="{! this }" action="{! c.doInit }" />
<aura:handler action="{!c.refreshRiskAnalysis}" event="c:OrmInstantiateRiskAnalysisEvt" />
<aura:attribute name="assessmentRiskId" type="string" description="" />
<aura:attribute name="frequency" type="orm_frequency__c[]" />
<aura:attribute name="assessmentRiskId" type="String" description="" />
<aura:attribute name="assessmentRiskData" type="orm_assessmentRisk__c" default="{
																		'sobjectType' : 'orm_assessmentRisk__c',
												                         'orm_assessment__c': '',  
												                         'orm_Risk__c':''   
																	}" />
	<table class="slds-table">
	      <tr>
              <td>
                <div class="topSpacing">
                <label class="slds-form-element__label">Risk Name<span class="cmn_mandatory_indicator">*</span></label>
                </div>
                <div class="width">  
                <a href="javascript:void(0);">
                <ui:inputText class="slds-input"  
                                           value="{!v.assessmentRiskData.orm_Risk__r.Name}" disabled="true">
                </ui:inputText>
                </a>
              </div>
            </td>
      
              <td>
                <div class="topSpacing">
                <label class="slds-form-element__label">Description<span class="cmn_mandatory_indicator">*</span></label>
                </div>
                <div class="width">  
                <a href="javascript:void(0);">
                <ui:inputText class="slds-input"  
                                           value="{!v.assessmentRiskData.orm_Risk__r.Description}" disabled="true">
                </ui:inputText>
                </a>
              </div>
            </td>
       </tr>
       
          <tr>
              <td>
                <div class="topSpacing">
                <label class="slds-form-element__label">Risk Name<span class="cmn_mandatory_indicator">*</span></label>
                </div>
               <ui:inputSelect aura:id="frequency" 
	            change="{!c.onChangefrequency}" class="slds-select"
	               labelClass="slds-form-element__label">
	                <ui:inputSelectOption  text="{!v.assessmentRiskData.orm_frequency__c}"
	                   label="{!v.assessmentRiskData.orm_frequency__c}"/>
	                   <aura:iteration items="{!v.frequency}" var="frequency">
	                    <ui:inputSelectOption text="{!frequency}"  label="{!frequency}" />
	              	 </aura:iteration>
	          </ui:inputSelect>
            </td>
      
              <td>
                <div class="topSpacing">
                <label class="slds-form-element__label">Description<span class="cmn_mandatory_indicator">*</span></label>
                </div>
                <div class="width">  
                <a href="javascript:void(0);">
                <ui:inputText class="slds-input"  
                                           value="{!v.assessmentRiskData.orm_Risk__r.Description}" disabled="true">
                </ui:inputText>
                </a>
              </div>
            </td>
       </tr>
   </table>
    
</aura:component>
