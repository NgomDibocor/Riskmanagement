																                         'orm_Risk__c':'',
																                         'orm_frequency__c' :'',
																                         'orm_cost__c':'',
																                         'orm_date__c':'',
																                         'orm_environmentAndCommunity__c':'',
																                         'orm_healthAndSafety__c':'',
																                         'orm_manageability__c':'',
																                         'orm_productionLoss__c':'',
																                         'orm_reputation__c':'',
																                         'orm_security__c':'',
																                         'orm_status__c':'',
																                         'orm_vulnerability__c':'',
																                         'orm_probability__c':'',
