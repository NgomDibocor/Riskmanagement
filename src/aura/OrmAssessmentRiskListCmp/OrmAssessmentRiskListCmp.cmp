<aura:component controller="AssessmentRiskController" extends="c:ormAbstractListCmp">
    <aura:handler action="{!c.doInit}" name="init" value="{!this}" />
    <aura:attribute name="assessmentRisks" type="orm_assessmentRisk__c[]" description="" />
    <aura:handler event="c:EventAddAssessmentRisk" action="{!c.refreshList}" />
    <!--debut card-->
    
    <aura:iteration items="{!v.assessmentRisks}" var="item" indexVar="i">
        <div class="slds-col slds-size_1-of-2">
            <div class="slds-box slds-box_x-small slds-text-align_left slds-m-around_x-small" style="border: none;word-wrap: break-word">

                <article class="slds-card">
                    <div class="slds-card__header slds-grid">
                        <header class="slds-media slds-media_center slds-has-flexi-truncate">
                            <div class="slds-media__figure">
                                <span class="slds-icon_container " title="Risk">
                             <lightning:icon iconName="utility:trail" size="medium" />
                             <span class="slds-assistive-text">Risk</span>
                                </span>
                            </div>
                            <div class="slds-media__body">
                                <h2>
                                <a href="javascript:void(0);" class="slds-card__header-link"
                                    title="{!item.orm_Risk__r.Name}"><ui:outputText value="{!item.orm_Risk__r.Name}" />
                                </a>
                             </h2>
                                <h2>
                                <a href="javascript:void(0);" class="slds-card__header-link"
                                    title="{!item.orm_assessment__r.Name}"><ui:outputText value="{!item.orm_assessment__r.Name}" />
                                </a>
                             </h2>
                            </div>
                            <div class="slds-no-flex">
                                <button class="slds-button slds-button_neutral">View</button>
                            </div>
                        </header>
                    </div>
                    <div class="slds-card__body slds-card__body_inner">
                        <ui:outputRichText value="{!item.Name}" />
                    </div>
                    <footer class="slds-card__footer" style=" border-top:2px solid black; height:10px;">
                         <a class="slds-card__footer-action" href="javascript:void(0);">
                        <span class="slds-assistive-text">
                            details
                        </span>
                        </a> 
                    </footer>
                </article>
            </div>
        </div>
    </aura:iteration>
    <!--fin card-->
    <!--<c:OrmAssessmentRiskNewCmp/>-->
</aura:component>