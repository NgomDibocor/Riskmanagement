<aura:component controller="OrmAssessmentRiskController" extends="c:ormAbstractListCmp">
    <aura:handler action="{!c.doInit}" name="init" value="{!this}" />
    <aura:attribute name="assessmentRisks" type="orm_assessmentRisk__c[]" description="" />
    <!--  <aura:handler event="c:EventAddAssessmentRisk" action="{!c.refreshList}" /> -->
    <!--debut card-->
    
    <!-- test -->
    <div class="slds-page-header">
  <div class="slds-media">
    <div class="slds-media__figure">
      <span class="slds-icon_container slds-icon-standard-opportunity" title="Description of icon when needed">
       
      </span>
    </div>
    <div class="slds-media__body">
      <h1 class="slds-page-header__title slds-truncate slds-align-middle" title="Rohde Corp - 80,000 Widgets">Rohde Corp - 80,000 Widgets</h1>
      <p class="slds-text-body_small slds-line-height_reset">Mark Jaeckal • Unlimited Customer • 11/13/15</p>
    </div>
  </div>
</div>
    <!-- fin test  -->
    
  <div class="slds-grid slds-wrap">
    <aura:iteration items="{!v.assessmentRisks}" var="item" indexVar="i">
        <div class="slds-col slds-size_1-of-2">
            <div class="slds-box slds-box_x-small slds-text-align_left slds-m-around_x-small">

                <article class="slds-card" style="height:120px; width:300px; border-bottom:2px solid black;">
                    <div class="slds-card__header slds-grid">
                        <header class="slds-media slds-media_center slds-has-flexi-truncate">
                            <div class="slds-media__figure">
                                <span class="slds-icon_container " title="Assessment Risk">
                                   <lightning:icon iconName="utility:trail" size="medium" />
                                </span>
                            </div>
                            <div class="slds-media__body">
                                <h2>
                                <a href="javascript:void(0);" class="slds-card__header-link"
                                    title="{!item.orm_assessment__r.Name}"><ui:outputText value="{!item.orm_assessment__r.Name}" />
                                </a>
                             </h2>
                            </div>
                            <div class="slds-no-flex">
                                <button class="slds-button slds-button_neutral">
							{!$Label.c.show_button_title}
                                </button>
                            </div>
                        </header>
                    </div>
                    <div class="slds-card__body slds-card__body_inner">
                        <ui:outputRichText value="{!item.orm_assessment__r.orm_description__c}" />
                    </div> 
                   
                </article>
            </div>
        </div>
    </aura:iteration>
  </div>  
  
    <!--fin card-->
    
</aura:component>