    <div style="color:white;position:relative">
            <span onclick="{!c.closeFD}"><lightning:icon  class="ico" iconName="utility:clear" size="medium" /></span>
         
         
           
        {!v.nomField}</br></br>
       
       {!v.descriptionField}
    </div>
    
   
</aura:component>