<aura:component extends="c:ormAbstractListCmp" controller="OrmImpactController">
	
	<aura:handler event="c:OrmSendIdAssessmentRiskToCauseEvt" action="{!c.getAssessmentRiskId}" />
	<aura:registerEvent name="OrmNewImpactClickedEvt"  type="c:OrmNewImpactClickedEvt"/>
	<aura:attribute name="idAssessmentRisk" type="string" />
	<aura:attribute name="impacts" type="Macro[]" description="" />
	<aura:attribute name="showSaveCancelBtn" type="boolean" default="false" />

		  <h1>List of Impacts</h1>
		  
		<div class="slds-grid slds-gutters">
	        <div class=" slds-size--3-of-12   slds-p-horizontal--small slds-float—left">  
	        </div>
	        <div class=" slds-size--5-of-12   slds-p-horizontal--small slds-float—left">
	          <lightning:input type="search"  label="{!$Label.c.search_title_label}" placeholder="search Impact by name or description" />
	        </div>
	        <div class=" slds-size--2-of-12   slds-p-horizontal--small slds-float—left">
	            
	        </div>
	        <div class=" slds-size--2-of-12   slds-p-horizontal--small slds-float—left">
	        <span class="btnNewRisk" onclick="{!c.openImpactNewCmp}">
	              <lightning:icon iconName="utility:new" size="small"   />
	            </span>
	        </div>
       </div><br/><br/>
       <aura:if isTrue="{!v.showSaveCancelBtn}">
	        	<div class="slds-grid slds-page-header__detail-row" style="padding: 0px !important">
	        		<!--button for save and cancel Record after Inline Edit-->
		            <lightning:buttonGroup class="slds-m-around_medium">
		                <lightning:button label="{!$Label.c.cancel_button_title}"  onclick="{!c.cancel}"/>
		                <lightning:button label="{!$Label.c.save_button_title}"  onclick="{!c.save}" variant="success"/>
		            </lightning:buttonGroup>
	        	</div>
	        </aura:if>
       <table class="slds-table slds-table_bordered slds-table_cell-buffer">
	            <thead>
	                <tr class="slds-text-title--caps">
	                  <th style="width:3.25rem;" class="slds-text-align--right">
		              	<div class="slds-form-element">
		                	<div class="slds-form-element__control">
		                    	<label class="slds-checkbox">
		                        	<ui:inputCheckbox aura:id="box3" />
		                        	<span class="slds-checkbox--faux"></span>
		                        	<span class="slds-form-element__label text"></span>
		                     	</label>
		                    </div>
		                </div>
		              </th> 
	                  <th scope="col"><div class="slds-truncate" title="">N°</div></th>
	                   <th scope="col"><div class="slds-truncate" title="">Name</div></th>
	                  <th scope="col"><div class="slds-truncate" title="">{!$Label.c.orm_description}</div></th>
	                </tr>
	            </thead>
	            
	            <tbody>
	             	<aura:iteration items="{!v.impacts}" var="impact" indexVar="sNo">
	                   <!-- Child Lightning Component --> 
	                    <c:OrmImpactEditRowCmp impact="{!impact}"
	                                     showSaveCancelBtn="{!v.showSaveCancelBtn}"
	                                     sNo="{!sNo + 1}" />                       
	                </aura:iteration>
	            </tbody>
	        </table> 
	        
	        <c:OrmImpactNewCmp/>
</aura:component>
